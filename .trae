# Trae Editor Rules Configuration
# This file defines coding standards and rules for the Trae editor

[rules]
# Private properties and methods should always be prefixed with an underscore
private_underscore_prefix = true

# Properties and methods should always be sorted alphabetically
alphabetical_sorting = true

[rules.private_underscore_prefix]
description = "Private properties and methods should always be prefixed with an underscore"
enabled = true
severity = "warning"
pattern = "^_[a-zA-Z][a-zA-Z0-9]*$"
applies_to = ["private_properties", "private_methods"]

# Example violations:
# private $property;     // Should be: private $_property;
# private function method() {}  // Should be: private function _method() {}

[rules.alphabetical_sorting]
description = "Properties and methods should always be sorted alphabetically"
enabled = true
severity = "warning"
sort_order = "alphabetical"
applies_to = ["properties", "methods"]
group_by_visibility = true  # Sort within visibility groups (public, protected, private)
group_by_type = true        # Sort properties before methods

# Example violations:
# class Example {
#     public $zebra;
#     public $apple;  // Should come before $zebra
#     public function zebra() {}
#     public function apple() {}  // Should come before zebra()
# }

[editor]
# Enable real-time rule checking
live_validation = true
# Show rule violations in the editor
show_inline_errors = true
# Auto-fix suggestions
auto_fix_suggestions = true