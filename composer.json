{
    "name": "prelude-so/sdk",
    "version": "1.0.0",
    "description": "PHP SDK for Prelude services including OTP SMS verification",
    "type": "library",
    "keywords": ["prelude", "sms", "otp", "verification", "sdk"],
    "homepage": "https://github.com/AndreaAlhena/prelude-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Tantimonaco",
            "email": "learning@andreatantimonaco.me"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/php-code-coverage": "^10.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Prelude\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prelude\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --min=80",
        "test:coverage-html": "pest --coverage-html=coverage",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/",
        "analyse": "phpstan analyse src/ --level=8",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:test": "docker-compose exec php composer test",
        "docker:coverage": "docker-compose exec php composer test:coverage"
     },
     "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
