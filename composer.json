{
    "name": "prelude/sdk",
    "description": "PHP SDK for Prelude services including OTP SMS verification",
    "type": "library",
    "keywords": ["prelude", "sms", "otp", "verification", "sdk"],
    "homepage": "https://github.com/prelude/php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Prelude Team",
            "email": "support@prelude.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Prelude\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prelude\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/",
        "analyse": "phpstan analyse src/ --level=8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
